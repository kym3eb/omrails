<div class="container">

  <div class = "row">
    <div class="col-md-4">
      <div class="card card-block">
        <h4>Garments</h4>
        <p class="card-text"> <%= current_user.username %> </p>
       </div>
     </div>
      <div class="col-md-8">
        <% if user_signed_in? %>
          <center><%= link_to 'New Garment', new_garment_path %></center>
        <%end %>    
        <ul class="list-group">
          <% @garments.each do |garment| %>
              <%= link_to garment, class: "list-group-item list-group-item-action" do %>
              <h5 class="list-group-item-heading"><%= garment.garment_name %></h5>
              <p class="list-group-item-text">Type: <%= garment.garment_type %></p>
              <p class="list-group-item-text"><%= garment.desc %></p>
              <p class="list-group-item-text"><%= garment.user.username %></p>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>